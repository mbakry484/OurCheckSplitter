{
  "openapi": "3.0.4",
  "info": {
    "title": "OurCheckSplitter.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/Friends": {
      "get": {
        "tags": [
          "Friends"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Friends"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FriendDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/FriendDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/FriendDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Receipt": {
      "get": {
        "tags": [
          "Receipt"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Receipt"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Receipt"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Receipt"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/Receipt"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Friend": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "receiptId": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "receipt": {
            "$ref": "#/components/schemas/Receipt"
          }
        },
        "additionalProperties": false
      },
      "FriendDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Item": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "receiptId": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "Receipt": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "receiptName": {
            "type": "string",
            "nullable": true
          },
          "tax": {
            "type": "number",
            "format": "double"
          },
          "tips": {
            "type": "number",
            "format": "double"
          },
          "total": {
            "type": "number",
            "format": "double"
          },
          "friends": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Friend"
            },
            "nullable": true
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Item"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}